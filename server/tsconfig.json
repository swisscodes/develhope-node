{
    "compilerOptions": {
      "target": "ES2015",
      "module": "NodeNext",
      "outDir": "./dist",
      "strict": true,
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "noImplicitReturns": true,
      "noFallthroughCasesInSwitch": true,
      "esModuleInterop": true,
      "baseUrl": "./src"
  },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "**/*.test.ts"]
  }